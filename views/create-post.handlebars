<section>
  <h2 class="title ml-3">create post</h2><hr>

  <form class="new-post-form">
    <div class="mx-3">
      <label for="post-title">title:</label>
      <input class="input" type="text" id="post-title" name="post-title" placeholder="insert post title here"/>
    </div>
    <div class="mx-3">
      <label for="post-content">content:</label>
      <input class="textarea is-large" id="post-content" name="post-content" placeholder="insert post content here"/>
    </div>
    <button type="submit" class="button m-4 is-success">create post</button>
  </form>
</section>

