<div class='comments has-background-success-light has-text-weight-medium'>
  {{#each this}}
    <section class='comment ml-4'>
      <div class='meta'>
        {{user.username}}
        on
        {{format_date created_at}}
      </div>
      <div class='text'>
        {{comment_text}}
      </div>
    </section>
  {{/each}}
</div>